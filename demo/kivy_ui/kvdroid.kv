#:import ScrollEffect kivy.effects.scroll.ScrollEffect
#:import Window kivy.core.window.Window
<LineButton>:
    radius: dp(10)
    padding: dp(100), dp(20)
    text_size: self.width, None
    markup: True
    halign: "center"
    line_color: 0, 0, 0, 1
    color: 0, 0, 0, 1
    on_release: app.execute_code(self.exec)

BoxLayout:
    orientation: "vertical"
    spacing: "10dp"
    Label:
        text: "KVDROID"
        size_hint_y: None
        height: self.texture_size[1]
        font_size: "25sp"
        padding: "20dp", "20dp"
        color: 0, 0, 0, 1
    RecycleView:
        id: rv
        effect_cls: ScrollEffect
        scroll_distance: dp(1)
        viewclass: "LineButton"
        RecycleBoxLayout:
            orientation: "vertical"
            size_hint_y: None
            size: self.minimum_size
            default_size_hint: 1, None
            default_size: 0, dp(100)
            padding: dp(15)
            spacing: dp(15)




